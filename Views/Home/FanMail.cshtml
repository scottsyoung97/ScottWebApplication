@{
    ViewBag.Title = "Calculate the Final Grade";
}

@model FanMailModel


<body>
    <h3>Grade Calculation</h3>
    <p>Input Percentage of Total Points for Each Category</p>
    <form method="post">
        <label>Assignments:</label>
        <input id="assignments" type="number" asp-for="assignments"/>
        <br /><br /><br />
        <label>Group Project:</label>
        <input id="groupProj" type="number" asp-for="groupProj"/>
        <br /><br /><br />
        <label>Quizzes:</label>
        <input id="quizzes" type="number" asp-for="quizzes"/>
        <br /><br /><br />
        <label>Exams:</label>
        <input id="exams" type="number" asp-for="exams"/>
        <br /><br /><br />
        <label>INTEX:</label>
        <input id="intex" type="number" asp-for="intex"/>
        <br /><br /><br />
        <input type="Submit" value="Compute Final 413 Grade" id="submitButton" />
        <div asp-validation-summary="All"></div>
    </form>
</body>

